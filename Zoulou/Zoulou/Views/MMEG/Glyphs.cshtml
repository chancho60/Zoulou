@model Zoulou.Models.MMEG.GlyphViewModel
@{
    ViewBag.Title = "MMEG - Glyphs";
}
<div class="row">
    <div class="navbar navbar-inverse">
        <div class="container" style="padding: 0px 15px;">
            <div class="navbar-header">
                <div class="game-logo mmeg">
                    <a href="/En/MMEG">
                        <div class="crop" style="width: 60px; height: 60px;">
                            <img src="/Content/Images/MMEG.png" alt="MMEG" />
                        </div>
                    </a>
                </div>
            </div>
            <form id="searchform" role="search" method="get" action="" class="navbar-form navbar-right searchform">
                <div class="input-group widget-search">
                    <input type="text" class="form-control" placeholder="Search">
                    <div class="input-group-btn">
                        <button class="btn btn-secondary" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                    </div>
                </div>
            </form>
            <div class="navbar-right">
                <ul class="nav navbar-nav">
                    @Html.MenuItem("Creatures", "Creatures", "MMEG")
                    @Html.MenuItem("Tier List", "TierList", "MMEG")
                    @Html.MenuItem("Achievements", "Achievements", "MMEG")
                    @Html.MenuItem("Glyphs", "Glyphs", "MMEG")
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table style="width: 100%; border: 1px solid #313d50;">
            <tr>
                <td>Rarity</td>
                @foreach(var Rarity in Model.AvailableRarities) {
                    <td colspan="4">@Rarity.RarityName</td>
                }
            </tr>
            <tr>
                <td>Stats / Level</td>
                @foreach(var Rarity in Model.AvailableRarities) {
                    for(var i = 7; i <= 16; i += 3) {
                        <td>@i.ToString()</td>
                    }
                }
            </tr>
            @foreach(var Stat in Model.AvailableStats) {
                <tr>
                    <td>@Stat.StatName @Stat.StatModifier</td>
                    @foreach(var Rarity in Model.AvailableRarities) {
                        for(var i = 7; i <= 16; i += 3) {
                            <td>@Model.CalculateStat(Stat.StatName, Rarity.RarityName, Stat.StatModifier, i)</td>
                        }
                    }
                </tr>
            }
        </table>
    </div>
</div>
